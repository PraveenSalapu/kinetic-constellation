{
    "manifest_version": 3,
    "name": "Kinetic Constellation",
    "version": "1.0.0",
    "description": "AI-Powered Resume Tailoring & Auto-Apply",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}